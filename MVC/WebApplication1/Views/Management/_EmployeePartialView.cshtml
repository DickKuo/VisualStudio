<div id="div_Emp_Partial">
    <h3>所屬公司員工</h3>
    <hr />
    <div class="row">
        <div class="col-md-offset-8 col-md-2">
            <button type="submit" id="DepDeleteEmp" onclick="OnDepDeleteEmpClick()" class="btn btn-danger marg-around-10">移除員工</button>
        </div>
        <div class=" col-md-2">

            <button type="submit" id="EmpAddButton" onclick="OnEmpAddClick()" class="btn btn-success marg-around-10">新增員工</button>
        </div>
        </div>

    <div class="panel panel-default">
        <div class="panel-heading">員工列表</div>
        <table class="table" id="EmpTable">
            <tr>
                <th>
                    <input type="checkbox" id="Emp_All" onclick="OnTableRowAllCheckBox(EmpTable)" />
                </th>
                <th>
                    員工編號
                </th>
                <th>
                    姓名
                </th>
                <th>
                    姓氏
                </th>
                <th>
                    電話
                </th>
              
            </tr>
            @if (Model != null)
            {
                if (Model.EmpList != null)
                {
                    foreach (var item in Model.EmpList)
                    {
                        <tr id="Emp_@item.EmpNo">
                            <td>
                                <input type="checkbox" id="@item.EmpNo"  />
                            </td> 
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpFirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tel)
                            </td>
                                                 
                        </tr>
                    }
                }
            }
        </table>
    </div>
</div>

