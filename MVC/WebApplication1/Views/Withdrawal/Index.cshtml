@model WebApplication1.Models.DepositViewModels.DepositViewModel

@{
    ViewBag.Title = Resources.Menu.Menu_2002;
    Html.AddJavaScript("~/Scripts/Code/WithdrawalJs.js");
}
<h2>@Resources.Menu.Menu_2002</h2>
<hr> 

@using (Html.BeginForm("Withdrawal", "Withdrawal")) {    
    <div class="panel panel-info">
        <div class="panel-heading">入金資料</div>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-lg-offset-3 col-xs-6" style="padding-left: 15px ;padding-bottom :30px">
                    <div class='input-group date'>
                        <span class="input-group-addon">
                            帳號
                        </span>
                        @Html.TextBox("Account", @Model._Customer.Account, new { @class = "form-control  addtimepicker col-xs-3", @ReadOnly = "ReadOnly" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-xs-6" style="padding-left: 15px; padding-bottom: 30px">
                    <div class='input-group date'>
                        <span class="input-group-addon">
                            入金金額
                        </span>
                        @Html.TextBox("Draw", @Model._Transaction.Detail.Draw, new { @class = "form-control  addtimepicker col-xs-3" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-xs-9" style="padding-left: 15px; padding-bottom: 30px">
                    <div class='input-group date col-xs-6'>
                        <span class="input-group-addon ">
                            銀行帳號
                        </span>
                        @Html.TextArea("BankAccount", @Model._Transaction.Detail.BankAccount, new { @class = "form-control  addtimepicker col-xs-3", @id = "BankAccount" })
                    </div>                    
                    <div class="col-xs-6">
                        <button type="button" class="btn btn-info selectbank" >
                            選取銀行
                        </button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-xs-6" style="padding-left: 15px; padding-bottom: 30px">
                    <div class='input-group date'>
                        <span class="input-group-addon">
                            銀行名稱
                        </span>
                        @Html.TextArea("BankName", @Model._Transaction.Detail.BankName, new { @class = "form-control  addtimepicker col-xs-3", @id = "BankName" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-3 col-xs-6" style="padding-left: 15px; padding-bottom: 30px">
                    <div class='input-group date'>
                        <span class="input-group-addon">
                            銀行分行
                        </span>
                        @Html.TextArea("BankCode", @Model._Transaction.Detail.BranchName, new { @class = "form-control  addtimepicker col-xs-3", @id = "BankCode" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-3 col-xs-6" style="padding-left: 15px; padding-bottom: 30px">
                    <div class='input-group date'>
                        <span class="input-group-addon">
                            備註
                        </span>
                        @Html.TextArea("Remark", @Model._Transaction.Detail.Remark, new { @class = "form-control  addtimepicker col-xs-3" })
                    </div>
                </div>
            </div>

            <div class="form-group" style="padding-top:180px; padding-right:250px">
                <div class="text-danger text-center">

                    <label><input type="checkbox" id="AgreeCheck" value="">出金審請需要幾天的工作天，會依照申請單匯入指定的銀行帳戶。</label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-xs-2">
                    <button type="submit" value="OK" name="Status" class="btn btn-success DepositBtn" >送出</button>
                </div>

                <div class="col-xs-3">
                    <button type="submit" value="Cancel" name="Status"  class="btn btn-info DepositBtn" >返回</button>
                </div>
            </div>

        </div>
    </div>
}