@model  WebApplication1.Models.EmployeeMgrViewModels.EmployeeManamgerViewModel
@using Newtonsoft.Json

@{
    ViewBag.Title = "Create";
}

<h2>新增</h2>


@using (Ajax.BeginForm("AddAction", "Employee", new AjaxOptions
{
    HttpMethod = "Post",
  
    OnSuccess = "OnAddResult"

},
new { Id = "Load_AddOK_Form" }
))
{
    <table class="table">
        <tr>
            <td>
                FirstName :
            </td>
            <td>          
                @Html.TextBoxFor(M => M.Emp.EmpFirstName, new { id = "ADDForm_FirstName", @required = "required" })             
            </td>
        </tr>
        <tr>
            <td>
                LastName :
            </td>

            <td>        
                @Html.TextBoxFor(M => M.Emp.EmpLastName, new { id = "ADDForm_EmpLastName", @required = "required" })  
            </td>
        </tr>
        <tr>
            <td>
                Tel :
            </td>
            <td>
                @Html.TextBoxFor(M => M.Emp.Tel, new { id = "ADDForm_Tel", @required = "required" })
            </td>
        </tr>
        <tr>
            <td>
                Address :
            </td>
            <td>
                 @Html.TextBoxFor(M => M.Emp.Addr, new { id = "ADDForm_Addr", @required = "required" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" class="btn btn-default" value="確認" />
            </td>
            <td>
                <input type="submit" class="btn btn-default" value="取消" onclick="OnAddCancel()" />
            </td>
        </tr>
    </table>
    
}
