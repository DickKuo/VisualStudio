@using Newtonsoft.Json
@model  WebApplication1.Models.PhotoViewModels.PhotoViewModel



<div id="div_PhotoTable">
    <button type="button" id="ImageAddButton" class="btn btn-primary" onclick="LoadingUpLoadPage()">上傳檔案</button>
    <div class="panel panel-default">
        <div class="panel-heading">輪播圖列表</div>
        <table class="table" id="DepTable">
            <tr>
                <th>
                    編號
                </th>
                <th>
                    說明
                </th>
                <th>
                    附檔名
                </th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model.PhotoList)
                {
                    <tr id="Photo_@item.ImageNo">
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttachedFileName)
                        </td>
                        <td>
                            <input type="submit" value="刪除" class="btn btn-danger" onclick="OnPhotoDeleteClick(@JsonConvert.SerializeObject(item))" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>



